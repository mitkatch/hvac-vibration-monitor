/*
 * Device Tree Overlay for nRF52840 DK
 * 
 * Configures:
 * - I2C0 for ADXL343 accelerometer (P0.26/P0.27)
 * - LED0 alias for pairing indication
 */

/* ──────────────────────────────────────────────
 * I2C Configuration for ADXL343 Accelerometer
 * Using P0.26 (SDA) and P0.27 (SCL)
 * ────────────────────────────────────────────── */
&pinctrl {
	i2c0_default: i2c0_default {
		group1 {
			psels = <NRF_PSEL(TWIM_SDA, 0, 26)>,
				<NRF_PSEL(TWIM_SCL, 0, 27)>;
		};
	};

	i2c0_sleep: i2c0_sleep {
		group1 {
			psels = <NRF_PSEL(TWIM_SDA, 0, 26)>,
				<NRF_PSEL(TWIM_SCL, 0, 27)>;
			low-power-enable;
		};
	};
};

&i2c0 {
	compatible = "nordic,nrf-twim";
	status = "okay";
	clock-frequency = <I2C_BITRATE_STANDARD>;
	pinctrl-0 = <&i2c0_default>;
	pinctrl-1 = <&i2c0_sleep>;
	pinctrl-names = "default", "sleep";

	adxl343: adxl343@53 {
		compatible = "adi,adxl345";
		reg = <0x53>;
		status = "okay";
	};

	bme280: bme280@76 {
		compatible = "bosch,bme280";
		reg = <0x76>;
		status = "okay";
	};
};

/* ──────────────────────────────────────────────
 * LED Configuration for Pairing Indication
 * 
 * nRF52840 DK has 4 built-in LEDs:
 * - LED1: P0.13 (Active Low)
 * - LED2: P0.14 (Active Low)
 * - LED3: P0.15 (Active Low)
 * - LED4: P0.16 (Active Low)
 * 
 * We just need to create an alias to led0 (LED1)
 * since the nRF52840 DK already has LEDs defined.
 * ────────────────────────────────────────────── */
/ {
	aliases {
		led0 = &led0;  /* Map 'led0' alias to LED1 on nRF52840 DK */
	};
};
